#new_contact.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                h4#myModalLabel.modal-title New contact
            .modal-body
                .form-group
                    input#usernameNewContact.form-control(type='text', placeholder='Enter username or email')
                .row.hidden#NC_res_box
                    .col-md-1.col-xs-1.text-right
                        span.glyphicon.glyphicon-user(aria-hidden="true").lead
                    .col-md-7.col-xs-7
                        p.lead
                            span#NC_res_name
                        p.text-primary#NC_res_username
                    .col-md-4.col-xs-4
                        button.btn.btn-success.btn-block(aria-hidden="true")#NC_res_button_add
                            span.glyphicon.glyphicon-plus
                            | Send request

            .modal-footer
                button#searchContact.btn.btn-primary(type='button' disabled='disabled') Search
                button.btn.btn-default(type='button', data-dismiss='modal') Cancel